<html>
    <body>
        <div style="width: 1200px; margin: 0 auto; border: 1px dotted red;"></div>
        <a href="/" style="font-size: 20px;">Home</a>
        <form action="/adduser_course_submit" method="post">
            <table align="center" border="1" width="600">
                <tr>
                    <td>User id</td>
                    <td><select name="userid">
                        <% for(let i = 0; i<result.length; i++){ %>
                            <option value="<%=result[i].userid%>">
                                <%=result[i].userid%>
                            </option>
                            <% } %>
                    </select></td>
                </tr>
                <tr>
                    <td>Course id</td>
                    <td><select name="courseid">
                        <% for(let i = 0; i<result.length; i++){ %>
                            <option value="<%=result[i].courseid%>">
                                <%=result[i].courseid%>
                            </option>
                            <% } %>
                    </select></td>
                    </tr>
                    <tr>
                    <td>Start date</td>
                    <td><input type="date" name="startdate" /></td>
                    </tr>
                  <tr>
                    <td>End date</td>
                    <td><input type="date" name="enddate" /></td>
                    </tr>
                    <td colspan="2" align="center">
                        <input type="submit"value="Submit"/>
                    </td>
            </table>
        </form>
    </body>
</html>